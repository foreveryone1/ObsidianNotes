<panel>
	<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" />
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

	<container class="scrolling_box">
		<container>
			<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="8"/>
			<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="8"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>
  	 			
			<container>
				<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="8" />
				<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="8" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
				<record id="object_property">
					<integer id="get_property" value="TISN" />
					<integer id="set_property" value="hidn" />
				</record>
				
				<!--DERBIES-->
				<container>
					<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="0" />
					<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
					
					<widget class="label" id="TDeL" alignment="centre_x,bottom" spec="text" font="title" colour="text" auto_size="vertical">
						<record id="object_property" name="true">
							<string id="get_property" value="TDer" />
							<boolean id="name" value="true" />
						</record>
					</widget>
					<widget class="team_derbies_text" id="TDeV" spec="text" colour="text" reason="false" alignment="centre_x" auto_size="vertical">
						<record id="object_property">
							<string id="get_property" value="TDer" />
						</record>
					</widget>
				</container>

				<!--FIERCE RIVALS-->
				<container>
					<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="0" />
					<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
					
					<widget class="label" id="CfmL" alignment="centre_x,bottom" spec="text" font="title" colour="text" auto_size="vertical">
						<record id="object_property">
							<integer id="get_property" value="Cfmr" />
							<boolean id="name" value="true" />
						</record>
					</widget>
					<widget class="club_rivalries_list_text" id="CfmV" spec="text" colour="text" reason="false" alignment="centre_x" auto_size="vertical">
						<record id="object_property">
							<integer id="get_property" value="Cfmr" />
						</record>
					</widget>
				</container>

				<!--OTHER RIVALS-->
				<container>
					<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="0" />
					<layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
					
					<widget class="label" id="CfrL" alignment="centre_x,bottom" spec="text" font="title" colour="text" auto_size="vertical">
						<record id="object_property">
							<integer id="get_property" value="Cfrt" />
							<boolean id="name" value="true" />
						</record>
					</widget>
					<widget class="club_rivalries_list_text" id="CfrV" spec="text" colour="text" reason="false" alignment="centre_x" auto_size="vertical">
						<record id="object_property">
							<integer id="get_property" value="Cfrt" />
						</record>
					</widget>
				</container>
				
			</container> 					
		
		</container>
	</container>

</panel>
