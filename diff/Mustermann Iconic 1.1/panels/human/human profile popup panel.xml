				<container width="32"/>
				
				<widget class="value_based_picture" alignment="centre_x,centre_y" image_alignment="centre_x,centre_y" default_width="26">			
					<list id="value_list">
						<record min_value="1" max_value="5" file="mustermann/archetypes/firestarter" red_replacement="mustermann1" green_replacement="mustermann1" blue_replacement="mustermann0"/>
						<record min_value="6" max_value="10" file="mustermann/archetypes/firestarter" red_replacement="mustermann3" green_replacement="mustermann3" blue_replacement="bg darker"/>
						<record min_value="11" max_value="15" file="mustermann/archetypes/firestarter" red_replacement="mustermann6" green_replacement="mustermann6" blue_replacement="bg darker"/>
						<record min_value="16" max_value="20" file="mustermann/archetypes/firestarter" red_replacement="gimn3" green_replacement="gimn3" blue_replacement="bg darker"/>
					</list>	
					<record id="object_property" get_property="Npmo"/>
				</widget>
				
				<container width="32"/>
				
				<widget class="value_based_picture" alignment="centre_x,centre_y" image_alignment="centre_x,centre_y" default_width="26">			
					<list id="value_list">
						<record min_value="1" max_value="5" file="mustermann/archetypes/whisperer" red_replacement="mustermann1" green_replacement="mustermann1" blue_replacement="mustermann0"/>
						<record min_value="6" max_value="10" file="mustermann/archetypes/whisperer" red_replacement="mustermann3" green_replacement="mustermann3" blue_replacement="bg darker"/>
