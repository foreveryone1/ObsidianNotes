<panel>
	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="1" horizontal_inset="0" />

	<boolean id="suppress_update_after_selection" value="true"/>
	<boolean id="can_show_player_cards" value="true" />

	<container class="vertical_adaptive_container" gap="0" height="331">
	
		<container class="contrast_box_no_margin" appearance="boxes/contrast/no margin/top/paper" red_replacement="mustermann3" default_height="-1">
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
			<!--STAFF PICTURE-->
			<container>
				<container height="75" width="150">
					<layout class="stick_to_sides_attachment" alignment="left" inset="10"/>
					<layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
					<layout class="stick_to_sides_attachment" alignment="all" inset="2" apply_to_children="true" />
					
					<widget class="object_portrait_picture" id="pclB" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="true" transparency="0.6">
						<layout class="stick_to_sides_attachment" alignment="left" inset="-15"/>
						<layout class="stick_to_sides_attachment" alignment="top" inset="4"/>
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />						
						<record id="object_property" dont_set_hint="true" get_property="Pclb" set_property="objt" />
					</widget>
					
					<widget class="picture" id="prop" scale_picture="true" keep_aspect_ratio="true" image_alignment="left,centre_y">
						<layout class="stick_to_sides_attachment" alignment="left" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="top" inset="4"/>
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
						<record id="object_property">
							<list id="get_properties">
								<!--Facegen data request-->
								<record get_property="fcgn" />
								<!--Fake name request-->
								<record get_property="Pfke" />
								<record get_property="prpc" set_property="valu" />
							</list>
						</record>
					</widget>
					
				</container>
			</container>
			
			<!--NAME & SUMMARY-->
			<container>
				<container height="75" width="672">
					<layout class="stick_to_sides_attachment" alignment="left" inset="108"/>
					<layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
					
					<container class="vertical_adaptive_container" gap="0" mode="distribute_equally">
					
						<widget class="person_button" id="pnam" font="title" size="xlarge" alignment="left,centre_y" colour="mustermanntext" height="30">
							<record id="object_property" get_property="objt"/>
						</widget>
						<widget class="job_label" colour="mustermanntext" alignment="left,centre_x" height="22">
							<record id="object_property" get_property="PcJj"/>
						</widget>
						
						<widget class="formatted_label" alignment="left,centre_x" auto_size="horizontal" colour="mustermanntext" height="23">
							<translation id="format" translation_id="242551" type="use" value="[%number#1] years old" />
							<record id="object_property" get_property="Page"/>
						</widget>
					
					</container>
														
				</container>
			</container>			
					
		</container>
		
		<container background_colour="mustermann2" height="40">
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
		
			<container class="horizontal_adaptive_container" gap="0" mode="distribute_equally">
			
				<container width="8"/>
							
				<widget class="value_based_picture" alignment="centre_x,centre_y" image_alignment="centre_x,centre_y" default_width="26">			
					<list id="value_list">
						<record min_value="1" max_value="5" file="mustermann/archetypes/hustler" red_replacement="mustermann1" green_replacement="mustermann1" blue_replacement="mustermann0"/>
						<record min_value="6" max_value="10" file="mustermann/archetypes/hustler" red_replacement="mustermann3" green_replacement="mustermann3" blue_replacement="bg darker"/>
