					</list>	
					<record id="object_property" get_property="Npmm"/>
				</widget>
				
				<container width="32"/>
			
				<container default_width="-1"/>
				
				<container width="8"/>
			
			</container>
		
		</container>
		
		<container class="vertical_adaptive_container" gap="0" mode="distribute_equally" height="216">		
			
			<container default_height="-1" minimum_height="1"/>
			
			<container class="horizontal_adaptive_container" gap="0" mode="distribute_equally" default_height="150">
				
				<container default_width="-1" minimum_width="8"/>
				
				<container width="150">
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
					
					<widget class="mustermann_doughnut_inverted" width="150">
