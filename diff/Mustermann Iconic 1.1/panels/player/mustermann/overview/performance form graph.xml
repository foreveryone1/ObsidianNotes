<panel ompl="false">
	<layout class="stick_to_sides_attachment" alignment="all" inset="20" apply_to_children="true" />

	<container id="cont">
		<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" vertical_offset="0" vertical_gap="0" horizontal_inset="0" />

		<!-- graph -->
		<container>

			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

			<widget class="graph" id="grap" draw_shadows="false" inset="0" show_instant_hint="false">
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" />

				<record id="default_series_properties" colour="accent" type="bar" line_width="1" point_radius="5" point_colour="accent"/>
				<record id="x_axis" hidden="true">
					<string id="format" value="[%fraction#1-3.0]"/>
					<record id="label_font" colour="faded text"/>
					<translation id="title" translation_id="242774" type="use" value="Match" />
				</record>
				<record id="y_axis" interval="1" hidden="true" min_value="5" show_labels="false">
					<string id="format" value="[%fraction#1-3.0]"/>
					<record id="label_font" colour="faded text"/>
					<record id="title_font" style="vertical"/>
					<translation id="title" translation_id="242661" type="use" value="Rating[COMMENT - player form section; label for y-axis of average rating graph]" />
				</record>
				<list id="grid_line_styles">
					<record/>
					<record/>
				</list>
			</widget>

		</container>

	</container>

</panel>