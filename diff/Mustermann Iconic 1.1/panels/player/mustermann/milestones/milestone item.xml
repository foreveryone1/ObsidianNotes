<panel height="98">
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="2" />
	
	<container class="contrast_box_no_margin" red_replacement="bg">
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="2" />
		
		<container class="contrast_box_no_margin" appearance="mustermann/milestones/gradient" red_replacement="mustermann3" blue_replacement="bg int">
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
			
			<container class="horizontal_adaptive_container" gap="0" mode="distribute_equally">
			
				<container default_width="53"/>
				
				<widget class="text" id="lndT" alignment="left,centre_y" multiline="true" default_width="-1" size="14" name="milestone name"/>
				
				<container default_width="4"/>
													
			</container>
			
			<container class="vertical_adaptive_container" gap="0" mode="distribute_equally">
			
				<container default_height="-1"/>
				
				<container class="horizontal_adaptive_container" gap="0" mode="distribute_equally" default_height="22">
				
					<widget class="text" id="year" alignment="bottom,right" default_width="-1" colour="faded text"/>
					
					<container default_width="4"/>
				
				</container>
			
			</container>

			<container>
				<container height="90" width="90">
					<layout class="stick_to_sides_attachment" alignment="left" inset="0"/>
					<layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
			
					<widget class="object_portrait_picture" id="tema" image_alignment="left" scale_picture="true" keep_aspect_ratio="false" wants_mouse_events="true">
						<layout class="stick_to_sides_attachment" alignment="left" inset="-45"/>
						<layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />	
						<record id="object_property" dont_set_hint="true" get_property="Pclb" set_property="objt" />
					</widget>
				
				</container>
			</container>
		
		</container>
	
	</container>
	
	<container class="contrast_box_no_margin" appearance="mustermann/milestones/overlay" id="awpi" green_replacement="bg"/>
	
</panel>
