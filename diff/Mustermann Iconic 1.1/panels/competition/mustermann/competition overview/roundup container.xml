			<!--results-->
			<container>

				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

				<widget class="competition_fixtures_panel" id="resu" file="competition/mustermann/competition overview/roundup fixtures" show_view_stage_link="false" display_mode="3" popup_parent="popt">
