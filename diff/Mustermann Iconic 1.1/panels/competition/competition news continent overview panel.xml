<!-- A holding an overview box for each continent -->
<!-- Note that since continent references are constant we can set them directly (less code, yay!)-->
<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="8"/>

	<container class="vertical_adaptive_container" gap="8" mode="distribute_equally">

		<container class="horizontal_adaptive_container" gap="8" mode="distribute_equally" default_height="-1">

			<container class="client_object_viewer_xml_panel" file="competition/mustermann/around the world/continent selector" default_width="-1">
				<record id="objt" dref="83886080"/>
			</container>
			
			<container class="client_object_viewer_xml_panel" file="competition/mustermann/around the world/continent selector" default_width="-1">
