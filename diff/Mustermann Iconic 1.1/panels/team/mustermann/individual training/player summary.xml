<panel height="122">
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
	
	<container class="contrast_box" red_replacement="bg lighter">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
		
		<container class="vertical_adaptive_container" gap="4" mode="distribute_equally">
							
			<container class="player_training_performance_panel" file="none" height="72">
				<layout class="horizontal_arrange" horizontal_layout="72,-1,45,20" horizontal_gap="4"/>
				<record id="object_property" get_property="objt" set_property="objt"/>
				
				<container class="object_portrait_picture" id="trpc" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
					<record id="object_property" get_property="objt" set_property="objt"/>
				</container>
				
				<container>
					<layout class="vertical_arrange" vertical_layout="22,-1" vertical_gap="-2"/>
					
					<widget class="person_button" alignment="left, bottom" font="title" colour="text" size="large" id="plnm">
						<record id="object_property" get_property="objt"/>
					</widget>
				
					<widget class="text" alignment="left, top" id="trst" name="training summary"/>
					
				</container>
				
				<container class="player_training_panel" file="none">
					<layout class="vertical_arrange" vertical_alignment="bottom" vertical_gap="4"/>

					<record id="object_property" get_property="objt" set_property="objt"/>

					<widget class="icon_button" icon="icons/16px/thumbs up" appearance="buttons/primary/normal/button" red_replacement="bg int" icon_colour="fg positive" click_event="ptev" auto_size="vertical">
						<layout class="centre_in_parent_attachment" alignment="horizontal" />
					</widget>

					<widget class="icon_button" icon="icons/16px/thumbs down" appearance="buttons/primary/normal/button" red_replacement="bg int" icon_colour="fg negative" click_event="ctev" auto_size="vertical">
						<layout class="centre_in_parent_attachment" alignment="horizontal" />
					</widget>

				</container>
				
				<container width="20">
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
				
					<widget class="picture" file="mustermann/credits/fme" red_replacement="black" blue_replacement="white" alignment="centre_x,centre_y" image_alignment="centre_x,centre_y" width="20">
						<translation id="hint" type="use" value="Fixtures/Results inspired by FME"/>
					</widget>
					
				</container>
			</container>
			
			<container class="player_training_information" file="none" default_height="30">
				<layout class="horizontal_arrange" horizontal_alignment="fill"/>

				<record id="object_property" get_property="objt" set_property="objt"/>

				<widget class="individual_position_training_popup" id="itpu" show_table_legend="true" ignore_multi_select="true" width="145"/>
				<widget class="individual_training_popup" id="itat" show_table_legend="true" ignore_multi_select="true" width="145"/>
				<widget class="player_training_intensity_rest_popup_button" id="inPt" width="185"/>

			</container>
		
		</container>		
		
	</container>
	
</panel>